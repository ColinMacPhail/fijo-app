<%= form_tag '/events', method: :post do %>

<div>
  <%= label_tag :name %>
  <%= text_field_tag :name, @event.name%>
</div>

<div>
  <%= label_tag :description %>
  <%= text_field_tag :description, @event.description%>
</div>

<div>
  <%= label_tag :date %>
  <%= text_field_tag :date, @event.date %>
</div>

<div>
  <%= label_tag :time %>
  <%= text_field_tag :time, @event.time %>


<%= submit_tag "Submit" %>

<% end %>